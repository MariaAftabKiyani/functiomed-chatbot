# ====================================================================
# Application Settings
# ====================================================================
APP_NAME=functiOMed Chatbot API
APP_VERSION=1.0.0
DEBUG=False

# ====================================================================
# CORS
# ====================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ====================================================================
# Qdrant Vector Database
# ====================================================================
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=functiomed_medical_docs
QDRANT_VECTOR_SIZE=1024
QDRANT_DISTANCE_METRIC=Cosine
QDRANT_TIMEOUT=30

# ====================================================================
# Embedding Model (BGE-M3)
# ====================================================================
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=16
EMBEDDING_MAX_LENGTH=2048
EMBEDDING_NORMALIZE=True

# ====================================================================
# Hugging Face
# ====================================================================
HF_HUB_TOKEN=your-token-here
HF_HOME=./models/huggingface

# ====================================================================
# Document Processing
# ====================================================================
DOCUMENTS_DIR=C:\Users\HomePC\Documents\Workspace\functiomed\Project\functiomed-chatbot\data\documents
CHUNK_SIZE=800
CHUNK_OVERLAP=150
MIN_CHUNK_SIZE=200

# ====================================================================
# Retry Settings
# ====================================================================
MAX_RETRIES=3
RETRY_DELAY=1.0
UPLOAD_BATCH_SIZE=100

# ====================================================================
# Retrieval Settings
# ====================================================================
RETRIEVAL_TOP_K=3
RETRIEVAL_MIN_SCORE=0.7
RETRIEVAL_MAX_QUERY_LENGTH=512

# ====================================================================
# LLM Configuration (Llama 3.1 8B Instruct)
# ====================================================================
LLM_MODEL_NAME=meta-llama/Llama-3.1-8B-Instruct
LLM_DEVICE=cuda
LLM_MAX_TOKENS=300
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_CONTEXT_WINDOW=2048

# Language settings
SUPPORTED_LANGUAGES = ["EN", "DE", "FR"]
DEFAULT_LANGUAGE = "DE"

# ====================================================================
# RAG (Retrieval-Augmented Generation) Configuration
# ====================================================================
RAG_MAX_CONTEXT_TOKENS=1024
RAG_MAX_CHUNKS=3
RAG_MIN_CHUNK_SCORE=0.7
RAG_ENABLE_CITATIONS=False
